@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/0.4.15/toaster.min.css" rel="stylesheet" />

    <script src="/scripts/jquery-1.9.1.js"></script>
    <script src="/scripts/bootstrap.js"></script>
    <script src="/scripts/angular.js"></script>
    <script src="/scripts/angular-animate.min.js"></script>
    <script src="/scripts/toaster.js"></script>
    <script src="/scripts/ui-bootstrap-tpls-0.13.0.min.js"></script>
    <script src="/scripts/angular-resource.min.js"></script>

    <script src="/scripts/app/app.js"></script>
    <script src="/scripts/app/LoginController.js"></script>
    <script src="/scripts/Script.js"></script>
    <script src="/scripts/validation.js"></script>
</head>
<body ng-app="app">
    <toaster-container toaster-options="{'time-out': 50000}"></toaster-container>
    <form novalidate id="loginForm" name="loginForm">
        <div class="container" ng-controller="LoginController">
            <div class="top-content">
                <div class="inner-bg">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-8 col-sm-offset-2 text">
                                <h1><strong>Login</strong> </h1>
                            </div>
                        </div>
                        <div class="row control-form" ng-form="frmLoginForm" novalidate>
                            <div class="col-sm-6 col-sm-offset-3 form-box">
                                <div class="form-top">
                                    <div class="form-top-left">
                                        <h3>Login to our site</h3>
                                        <p>Enter your register email id and password to log on:</p>
                                    </div>
                                    <div class="form-top-right">
                                        <i class="fa fa-key"></i>
                                    </div>
                                </div>
                                <div class="form-bottom">

                                    <div class="form-group">
                                        <label class="sr-only" for="TXTEmailID">Email ID.</label>
                                        <input type="text" name="TXTEmailID" placeholder="Enter your email id" required
                                               class="form-username form-control nat-email" id="form-username" ng-model="EmailID" valueerrormessage="Invalid email-id.">
                                        <span style="color: red" ng-show="frmLoginForm.TXTEmailID.$dirty && frmLoginForm.TXTEmailID.$invalid">
                                            <span ng-show="frmLoginForm.TXTEmailID.$error.required">Email ID is required.</span>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="TXTPassword">Password</label>
                                        <input type="password" name="TXTPassword" placeholder="Password" required
                                               class="form-password form-control" id="form-password" ng-model="Password">
                                        <span style="color: red" ng-show="frmLoginForm.TXTPassword.$dirty && frmLoginForm.TXTPassword.$invalid">
                                            <span ng-show="frmLoginForm.TXTPassword.$error.required">Password is required.</span>
                                        </span>
                                    </div>
                                    <div>
                                        <span id="StatusMessage" style="display: none; color: red; float: right;"></span>
                                        <input type="button" class="btn btn-success"
                                               ng-disabled="frmLoginForm.$invalid"
                                               ng-click="User.Methods.ValidateLogin(frmLoginForm)" value="Sign in!" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="loaderDIV" class="loader-div" style="display: none;">
                <img src="/img/red-lg-loader.gif" />
            </div>
        </div>
    </form>
</body>
</html>
